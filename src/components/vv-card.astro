---
export interface Props {
  title: string;
  image: string;
  description: string;
  link: string;
}
const { title, image, description, link } = Astro.props;
---

<article
  class="bg-emerald-100 rounded-lg shadow-lg overflow-hidden flex flex-col h-full">
  <a href={link} class="block hover:opacity-90 transition-opacity duration-200">
    <div class="p-4 flex flex-col flex-1">
      <h2 class="text-xl font-semibold mb-2">{title}</h2>
    </div>
    <img
      src={image}
      alt={title}
      class="w-full h-48 object-cover image-zoom"
      loading="lazy"
    />
    <div class="p-4 flex flex-col flex-1">
      <p class="text-gray-500 !text-sm mb-4 flex-1">{description}</p>
      <span class="text-blue-600 font-medium arrow-link">Read more â†’</span>
    </div>
  </a>
</article>

<style>
  article {
    transition: box-shadow 0.2s;
  }
  article:hover {
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
  }
  .arrow-link {
    display: inline-block;
    transition: transform 0.2s ease;
  }
  article:hover .arrow-link {
    transform: translateX(4px);
  }
  .image-zoom {
    transition: transform 0.3s ease;
  }
  article:hover .image-zoom {
    transform: scale(1.05);
  }
</style>
