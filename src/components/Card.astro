---
export interface Props {
  title: string;
  image: string;
  description: string;
  link: string;
}
const { title, image, description, link } = Astro.props;
---

<article
  class="bg-white rounded-lg shadow-lg overflow-hidden flex flex-col h-full">
  <a href={link} class="block hover:opacity-90 transition-opacity duration-200">
    <div class="p-4 flex flex-col flex-1">
      <h2 class="text-xl font-semibold mb-2">{title}</h2>
    </div>
    <img
      src={image}
      alt={title}
      class="w-full h-48 object-cover"
      loading="lazy"
    />
    <div class="p-4 flex flex-col flex-1">
      <p class="text-gray-700 text-base mb-4 flex-1">{description}</p>
      <span class="text-blue-600 font-medium">Read more â†’</span>
    </div>
  </a>
</article>

<style>
  article {
    transition: box-shadow 0.2s;
  }
  article:hover {
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
  }
</style>
